<HBox alignment="CENTER" prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
        <children>
            <GridPane prefWidth="400.0" HBox.hgrow="NEVER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="485.0" minWidth="10.0" prefWidth="108.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="786.0" minWidth="10.0" prefWidth="292.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <TextField fx:id="nameToEdit" maxWidth="260.0" prefWidth="260.0" GridPane.columnIndex="1" />
                    <Label text="Name:" />
                    <Label text="Municipality:" GridPane.rowIndex="1" />
                    <Label text="Reasons:" GridPane.rowIndex="2" />
                    <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <children>
                            <CheckBox fx:id="copiesToEdit" mnemonicParsing="false" text="Copies" />
                            <CheckBox fx:id="mailToEdit" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Mail" />
                            <CheckBox fx:id="taxesToEdit" layoutX="83.0" layoutY="10.0" mnemonicParsing="false" text="Taxes" />
                            <CheckBox fx:id="othersToEdit" layoutX="156.0" layoutY="10.0" mnemonicParsing="false" text="Others" textAlignment="CENTER" />
                        </children>
                        <padding>
                            <Insets top="5.0" />
                        </padding>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" prefWidth="260.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                            <ComboBox fx:id="municipalityToEdit" prefHeight="25.0" prefWidth="210.0" />
                            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="45.0" text="Add" />
                        </children>
                    </HBox>
                    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <buttons>
                            <Button defaultButton="true" mnemonicParsing="false" text="Save" />
                            <Button cancelButton="true" mnemonicParsing="false" text="Cancel" />
                        </buttons>
                    </ButtonBar>
                </children>
            </GridPane>
        </children>
